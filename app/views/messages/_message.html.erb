<div class="message">
  <div class="up-message">
    <div class="message-name">
      <%= message.user.name %>
    </div>
    <div class="message-date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="down-message">
    <div class="message-main">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '1000x1000'), class: 'message-image' if message.image.attached? %>
  </div>
</div>