<div class="up-main-chat">
    <div class="chat-room-box">
      <div class="chat-room-name">
      Test
      </div>
    </div>
  <div class="chat-end-box">
    <div class="chat-end-btn">
      <a href="#">チャット終了する</a>
    </div>
  </div>
</div>

<div class="middle-main-chat">
  <div class="message">
    <div class="up-message">
      <div class="message-name">Tom</div>
      <div class="message-date">2021/7/7(Wed) 7:25:30</div>
    </div>
    <div class="down-message">
        <div class="message-main">Hello</div>
    </div>
  </div>
  
  <div class="message">
    <div class="up-message">
      <div class="message-name">Tom</div>
      <div class="message-date">2021/7/7(Wed) 7:25:30</div>
    </div>
    <div class="down-message">
        <div class="message-main">Hello</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="down-main-chat">
     <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
